{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "ignoreDeprecations": "5.0",
    "types": ["element-plus/global"]
  },
  "include": [
    "env.d.ts",
    "ui2code.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
